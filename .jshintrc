{
    // -------------------------------------------------------------------------
    // JSHint options file
    // Syntax is JSON-like, comments are ignored.
    // Options reference: http://www.jshint.com/docs/options/
    // -------------------------------------------------------------------------

    // environment
    "browser": true,
    "devel": true,
    "node": true,
    "predef": {
        "angular": false,
        "_": false,  // lodash utility library

        // jasmine globals
        "jasmine": false,
        "beforeEach": false,
        "afterEach": false,
        "inject": false,
        "describe": false,
        "xdescribe": false,
        "it": false,
        "xit": false,
        "expect": false,
        "spyOn": false,
        "runs": false,
        "waits": false,
        "waitsFor": false,
        "exports": false,
        "getJSONFixture": false,

        // protractor globals
        "protractor": false,
        "browser": false,
        "element": false,
        "by": false
    },
    "strict": false,
    // "es3": true,

    // code style
    "bitwise": true,
    "camelcase": true,
    "curly": true,
    "eqeqeq": true,
    "forin": false,
    "immed": true,
    "latedef": "nofunc",
    "newcap": true,
    "noarg": true,
    "noempty": true,
    "nonew": true,
    "undef": true,
    "unused": true,
    "quotmark": "single",

    // whitespace
    "indent": 4,
    "trailing": true,
    "maxlen": 160

    // code simplicity - not enforced but nice to check from time to time
    // "maxstatements": 20,
    // "maxcomplexity": 5
    // "maxparams": 4,
    // "maxdepth": 4
}
